<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph.xml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77c567"
    tools:context=".settings_fragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="true"
        android:rowCount="3">

        <!--My Plants button-->
        <androidx.cardview.widget.CardView
            android:id="@+id/Basics"
            android:layout_width="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:layout_marginTop="130dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/plant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginTop="10dp"
                    android:text="@string/my_plants"
                    android:textColor="#014421"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/every1day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/every_day" />

                <CheckBox
                    android:id="@+id/every2days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/every_2_days" />

                <CheckBox
                    android:id="@+id/every3days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/every_3_days" />

                <CheckBox
                    android:id="@+id/every4days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/every_4_days" />

                <CheckBox
                    android:id="@+id/every5days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/every_5_days" />

                <CheckBox
                    android:id="@+id/every6days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/every_6_days" />

                <CheckBox
                    android:id="@+id/every7days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/every_7_days" />
                <CheckBox
                    android:id="@+id/never"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/never" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>

    <Button
        android:id="@+id/notification_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="0dp"
        android:text="@string/prompt" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:text="@string/save" />
</RelativeLayout>
