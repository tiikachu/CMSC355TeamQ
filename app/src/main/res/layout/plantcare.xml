<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/appheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/backgroundheader" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="290dp"
            android:src="@drawable/logo_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/my_plants"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />
    </FrameLayout>

    <ScrollView
        android:layout_below="@+id/appheader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="4">

            <!--Sample Plant 1-->
            <androidx.cardview.widget.CardView
                android:id="@+id/plant1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="20dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#CDF7D2"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/plant" />

                    <TextView
                        android:id="@+id/plant1text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sample Plant 1"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Sample Plant 2-->
            <androidx.cardview.widget.CardView
                android:id="@+id/plant2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="20dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#CDF7D2"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/plant" />

                    <TextView
                        android:id="@+id/plant2text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sample Plant 2"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Sample Plant 3-->
            <androidx.cardview.widget.CardView
                android:id="@+id/plant3"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="20dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#CDF7D2"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/plant" />

                    <TextView
                        android:id="@+id/plant3text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sample Plant 3"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Sample Plant 4-->
            <androidx.cardview.widget.CardView
                android:id="@+id/plant4"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="20dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#CDF7D2"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/plant" />

                    <TextView
                        android:id="@+id/plant4text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sample Plant 4"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

    </ScrollView>

</RelativeLayout>